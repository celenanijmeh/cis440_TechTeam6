    <script>
        document.getElementById('surveyType').addEventListener('change', function() {
            var surveyType = this.value;
            var questionDivs = document.querySelectorAll('.question');
            questionDivs.forEach(function(questionDiv) {
                questionDiv.style.display = 'none';
            });
            document.getElementById(surveyType === '1' ? 'sportsQuestions' : surveyType === '2' ? 'moviesQuestions' : 'musicQuestions').style.display = 'block';
        });
    </script>
